{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb-typescript"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
            "client/tsconfig.json",
            "server/tsconfig.json"
        ]
    },
    "rules": {
        "no-console": "off",
        "react/react-in-jsx-scope": "off",
        "react/button-has-type": "off"
    }
}