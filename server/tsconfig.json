{
  "exclude": [
    "dist",
    "test",
    "client"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "node",
    "checkJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "paths": {
      "@src/*":[
        "./*"
      ],
      "@routes/*": [
        "routes/*",
      ],
      "@routes": [
        "routes",
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@models": [
        "models"
      ],
      "@views/*": [
        "views/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@boot/*": [
        "boot/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@config/*": [
        "config/*"
      ],
    }
  }
}